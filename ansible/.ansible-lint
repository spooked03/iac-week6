---
# Ansible Lint configuration file
skip_list:
  - ignore-errors  # Allow use of ignore_errors instead of failed_when
  - yaml[comments-indentation]  # Allow flexible comment indentation
  - yaml[line-length]  # Allow lines longer than 160 characters
  - yaml[truthy]  # Allow flexible truthy values

# Set warning level
warn_list:
  - experimental
  - role-name

# Use default rules except those in skip_list
